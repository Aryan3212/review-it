#modal-js-new-post.modal
        .modal-background
        .modal-content
          .box
            form(action="/campgrounds", method="post", enctype="multipart/form-data")#new-post-form
              .field
                p.control.has-icons-left.has-icons-right
                  input.input(type="text", name="title", placeholder="Title")
                  span.icon.is-small.is-left
                    i.fas.fa-info
                  span.icon.is-small.is-right
                    i.fas.fa-check
              .field
                p.control.has-icons-left.has-icons-right
                  input.input(type="text", name="description",placeholder="Description")
                  span.icon.is-small.is-left
                    i.fas.fa-book
                  span.icon.is-small.is-right
                    i.fas.fa-check
              .field
                p.control.has-icons-left.has-icons-right
                  input.input(type="text", name="name",placeholder="Location Name")
                  span.icon.is-small.is-left
                    i.fas.fa-map-location
                  span.icon.is-small.is-right
                    i.fas.fa-check
              .field
                p.control.has-icons-left
                  input.input(type="number", name="price",placeholder="Price", step="any")
                  span.icon.is-small.is-left
                    i.fas.fa-dollar-sign
              .field
                p.control.has-icons-left
                  input.input(type="file", name="images", multiple)
                  span.icon.is-small.is-left
                    i.fas.fa-film
              .field.is-horizontal
                .field-label
                  label.label='Lat/Long'
                p.control.has-icons-left
                  input.input(type="number", name="latitude",placeholder="Latitude", step="any")
                  span.icon.is-small.is-left
                    i.fas.fa-location-dot
                p.control.has-icons-left
                  input.input(type="number", name="longitude",placeholder="Longitude", step="any")
                  span.icon.is-small.is-left
                    i.fas.fa-location-dot
              #new-post-map(style="width: 50%; height:100px;")
              .field
                p.control
                  button.button.is-success Create New Post
        button.modal-close.is-large(aria-label='close')
script(src="/public/scripts/newPostFormMap.js" defer)