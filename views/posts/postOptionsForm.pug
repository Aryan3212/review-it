#modal-js-options-post.modal
    .modal-background
    .modal-content
        .box
            form(action="/posts/"+post.id+"?_method=PATCH" method="post" enctype="multipart/form-data")#post-options-form
                p.control.has-background-info-light.has-text-weight-semibold="Only put in the fields you wish to change"
                .field
                    p.control.has-icons-left.has-icons-right
                        input.input(type="text" name="title" placeholder="Title")
                        span.icon.is-small.is-left
                            i.fas.fa-info
                        span.icon.is-small.is-right
                            i.fas.fa-check
                .field
                    p.control.has-icons-left.has-icons-right
                        input.input(type="text" name="description" placeholder="Description")
                        span.icon.is-small.is-left
                            i.fas.fa-book
                        span.icon.is-small.is-right
                            i.fas.fa-check
                .field
                    p.control.has-icons-left.has-icons-right
                        input.input(type="text" name="name" placeholder="Location Name")
                        span.icon.is-small.is-left
                            i.fas.fa-map-location
                        span.icon.is-small.is-right
                            i.fas.fa-check
                .field
                    p.control.has-icons-left
                        input.input(type="number" name="price" placeholder="Price" step="any")
                        span.icon.is-small.is-left
                            i.fas.fa-dollar-sign
                .field
                    p.control.has-icons-left
                        input.input(type="file" name="images", multiple)
                        span.icon.is-small.is-left
                            i.fas.fa-film
                .field.is-horizontal
                    p.control.has-icons-left.my-1.mr-1
                        input.input(type="number" name="latitude" placeholder="Latitude" step="any")
                        span.icon.is-small.is-left
                            i.fas.fa-location-dot
                    p.control.has-icons-left.my-1.mr-1
                        input.input(type="number" name="longitude" placeholder="Longitude" step="any")
                        span.icon.is-small.is-left
                            i.fas.fa-location-dot
                #option-post-map(style="width: 65%; height:200px;")
                .field
                    p.control
                        button.my-3.button.is-warning Edit Post
            form.my-2(action="/posts/"+post.id+"?_method=DELETE" method="post")
                button.button.is-danger Delete Post
    button.modal-close.is-large(aria-label='close')
script(src="/public/scripts/optionsPostFormMap.js" defer)